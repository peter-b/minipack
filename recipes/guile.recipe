name=guile
version=2.0.11
origin=gnu
release=1
configure_opt="
  --enable-static=yes
  --enable-shared=no
  --disable-rpath
  --enable-debug-malloc
  --enable-guile-debug
  --disable-deprecated
  --with-sysroot=${resultdir}
  --without-threads
  BDW_GC_CFLAGS='-I${resultdir}/include'
  BDW_GC_LIBS='-L${resultdir}/include -lgc'
  CC_FOR_BUILD=cc
  GUILE_FOR_BUILD=$(which guile)"

CFLAGS="${CFLAGS} -DGC_NO_DLL -DGC_WIN32_THREADS"
LDFLAGS="${LDFLAGS}"
