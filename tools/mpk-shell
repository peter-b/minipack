create_shell()
{

  : ${SHELL:=/bin/sh}

  echo "
==============
Minipack shell
==============

The following variables are set:

PATH=$PATH

PKG_CONFIG_LIBDIR=$PKG_CONFIG_LIBDIR

ACLOCAL=$ACLOCAL

[To exit the Minipack shell, type 'exit'].
"

$SHELL --login -i

echo "
========================
Minipack shell finished.
========================
"
}

pkg=$1

if [ ! -z "$pkg" ]; then
  recipe=$(get_recipe_name $pkg) || exit 1
  . $recipe
fi

create_shell
